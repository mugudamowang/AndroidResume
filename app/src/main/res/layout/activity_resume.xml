<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ResumeActivity">


    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/re_avatar"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_margin="@dimen/text_margin"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/re_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_toRightOf="@+id/re_avatar"
            android:textSize="26sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/re_name"
            android:layout_toRightOf="@id/re_avatar"
            android:id="@+id/label_name"
            />
        <TextView
            android:id="@+id/re_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/re_avatar"
            android:layout_below="@+id/re_name"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/re_age"
            android:layout_toRightOf="@id/re_avatar"
            android:id="@+id/label_age"
            />
        <TextView
            android:id="@+id/re_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/re_avatar"
            android:layout_below="@+id/re_age"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/re_gender"
            android:layout_toRightOf="@id/re_avatar"
            android:id="@+id/label_gender"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/re_avatar"
            android:background="@android:color/darker_gray"/>

    </RelativeLayout>


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人简介"
        android:textSize="16sp"
        android:layout_below="@+id/card_view"
        android:id="@+id/label_intro"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re_remark"
        android:padding="20dp"
        android:text="remark"
        android:textSize="14sp"
        android:layout_below="@+id/label_intro"
        />
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="特长"
        android:layout_below="@+id/re_remark"
        android:id="@+id/label_skill"
        />
    <TextView
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="android web-develop"
        android:padding="20dp"
        android:layout_below="@+id/label_skill"
        android:id="@+id/re_skill"
        />

</RelativeLayout>